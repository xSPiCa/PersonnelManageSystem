@model PersonnelManageSystem.Models.ReturnResult
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>员工管理</title>
    @*表格部分 使用bootstrap-table实现*@
    <script src="/lib/bootstrap/dist/js/bootstrap-table.js"></script>
    <link href="lib/bootstrap/dist/css/bootstrap-table.css"/>
    
    @*导入相应的js实现业务*@
    <script src="~/js/employee.js"></script>
    
</head>
<body>
<div>
    <p>员工列表</p>
    <table id="e-table"></table>
    @* 模态框模板 通过注入来实现各种具体功能 *@
    <div class="modal fade" id="e-Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    @* 标题注入 *@
                    <h5 class="modal-title">详情</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @*请求未到达前 先转圈圈  到达后直接注入html元素*@
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    @* 操作完成时的弹出框 *@
    <div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
        <!-- Position it -->
        <div style="position: absolute; top: 0; right: 0;">

            <!-- Then put toasts within -->
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <img src="..." class="rounded mr-2" alt="...">
                    <strong class="mr-auto">Bootstrap</strong>
                    <small class="text-muted">just now</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    See? Just like this.
                </div>
            </div>

            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <img src="..." class="rounded mr-2" alt="...">
                    <strong class="mr-auto">Bootstrap</strong>
                    <small class="text-muted">2 seconds ago</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    Heads up, toasts will stack automatically
                </div>
            </div>
        </div>
    </div>

</div>
</body>
</html>